@model Category


<form method="post" asp-action="DeleteCategory">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label for="Name" asp-for="Name" >Name</label>
        <input type="text" name="Name" id="Name" class="form-control" asp-for="Name" disabled />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label for="Description" asp-for="Description">Description</label>
        <input type="text" name="Description" id="Description" class="form-control" asp-for="Description" disabled />
    </div>
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}